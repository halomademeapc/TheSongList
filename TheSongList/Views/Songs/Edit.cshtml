@model TheSongList.Models.Entities.Song

@{
    ViewData["Title"] = "Edit Song";
}

<h2>Edit</h2>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistId" class="control-label"></label>
                <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.ArtistId"></select>
                <span asp-validation-for="ArtistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EraId" class="control-label"></label>
                <select asp-for="EraId" class="form-control" asp-items="ViewBag.EraId"></select>
                <span asp-validation-for="EraId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $.fn.selectpicker.Constructor.DEFAULTS.liveSearch = true;

        $(document).ready(function () {
            $('#@Html.IdFor(m => m.ArtistId)').selectpicker();
            $('#@Html.IdFor(m => m.EraId)').selectpicker();
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
