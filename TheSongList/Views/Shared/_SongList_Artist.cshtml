@model IEnumerable<Song>

<div class="list-group">
    @foreach (var s in Model.OrderBy(s => s.Name))
    {
        <a asp-controller="Songs" asp-action="Details" asp-route-id="@s.Id" class="list-group-item list-group-item-action d-flex flex-wrap align-items-center">
            <span class="lead mr-2">@s.Name</span>
            @if (s.Artist != null)
            {
                <small class="text-muted">@s.Artist.Name</small>
            }
        </a>
    }
</div>