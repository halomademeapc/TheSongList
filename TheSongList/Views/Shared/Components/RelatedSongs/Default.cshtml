@model IEnumerable<Song>

<div class="mt-4 mb-2 d-flex flex-row justify-content-between">
    <h5>Songs - @Model.Count()</h5>
    <a asp-controller="Appearances" asp-action="Create" asp-route-episode="@ViewBag.EpisodeId" class="btn btn-sm btn-outline-primary">
        <i class="fas fa-plus mr-2"></i>
        Add
    </a>
</div>
<div class="list-group">
    @foreach (var s in Model)
    {
        <div class="d-flex flex-row align-items-center">
            <a asp-controller="Songs" asp-action="Details" asp-route-id="@s.Id" class="list-group-item list-group-item-action d-flex flex-wrap align-items-center justify-content-between">
                <span class="lead col-md-6">@s.Name</span>
                @if (s.Artist != null)
                {
                    <small class="text-muted col-md-4">@s.Artist.Name</small>
                }
                <div class="col-md-2 d-flex flex-row justify-content-end">
                    @if (s.Era != null)
                    {
                        <span class="badge badge-pill badge-primary mt-2 mt-md-0" style="background-color: @s.Era.Color">
                            @s.Era.Label
                        </span>
                    }
                </div>
            </a>
            <a asp-controller="Appearances" asp-action="Delete" asp-route-episodeId="@ViewBag.EpisodeId" asp-route-songId="@s.Id" class="btn btn-sm btn-outline-secondary ml-2">
                <i class="fas fa-trash py-2 px-1"></i>
            </a>
        </div>
    }
</div>