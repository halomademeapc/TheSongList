@model IEnumerable<Song>

<div class="list-group">
    @foreach (var s in Model.OrderBy(s => s.Name))
    {
        <a asp-controller="Songs" asp-action="Details" asp-route-id="@s.Id" class="list-group-item list-group-item-action">
            @s.Name
            @if (s.Era != null)
            {
                <span class="badge badge-pill badge-primary ml-2" style="background-color: @s.Era.Color">
                    @s.Era.Label
                </span>
            }
        </a>
    }
</div>